    "vite": "^6.0.7"
  },
  "keywords": [
    "react",
    "component",
    "floating",
    "panel",
    "draggable",
    "hover",
    "ui",
    "overlay",
    "sidebar",
    "tooltip"
  ],
  "author": "opengspace",
