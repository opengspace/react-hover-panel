{
  "name": "@opengspace/react-hover-panel",
  "version": "1.0.0",
  "description": "A beautiful, draggable floating panel component for React with smart opacity and smooth animations",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:lib": "vite build --config vite.config.lib.js",
    "preview": "vite preview",
